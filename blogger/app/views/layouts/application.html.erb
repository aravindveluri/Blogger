<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id = "navbar">
      <ul id = "navlinks">
        <li id = "navlink"><%=link_to "Articles", articles_path %></li>
        <li id = "navlink"><%=link_to "Authors", authors_path %></li>
        <li id = "navlink"><%=link_to "Tags", tags_path %></li>
      </ul>
    </div>



    <div id="container">
      <div id="content">
        <%= yield %>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "(logout)", logout_path %>
          <% else %>
            <%= link_to "(login)", login_path %>
            <%= link_to "(new user?)", new_author_path %>

          <% end %>
        </h6>
      </div>
    </div>
  </body>

</html>
